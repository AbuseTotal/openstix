{
  "name": "openstix",
  "remoteUser": "vscode",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu-22.04",
  "workspaceFolder": "/openstix",
  "workspaceMount": "source=${localWorkspaceFolder}/,target=/openstix/,type=bind,consistency=cached",
  "features": {
    "ghcr.io/devcontainers/features/git": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-contrib/features/hatch:2": {
      "version": "latest"
    }
  },
  "containerEnv": {
    "HATCH_ENV_TYPE_VIRTUAL_PATH": ".venv/default/"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff"
      ],
      "settings": {
        "files.eol": "\n",
        "editor.defaultFormatter": "charliermarsh.ruff",
        "ruff.lint.args": [
          "--config=/openstix/pyproject.toml"
        ],
        "ruff.format.args": [
          "--config=/openstix/pyproject.toml"
        ],
        "python.defaultInterpreterPath": "/openstix/.venv/default/bin/python",
        "python.analysis.autoImportCompletions": true,
        "[python]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
            "source.fixAll": true,
            "source.organizeImports.ruff": true
          }
        }
      }
    }
  }
}